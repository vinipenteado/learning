<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="student_view_form" model="ir.ui.view">
        <field name="name">student.view.form</field>
        <field name="model">learning.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="vat" />
                        <field name="age" />
                        <field name="birth_date" />
                        <field name="partner_id" />
                        <field name="average_score" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Lista view -->
    <record id="student_view_list" model="ir.ui.view">
        <field name="name">student.view.list</field>
        <field name="model">learning.student</field>
        <field name="arch" type="xml">
            <list string="Students">
                <field name="name" />
                <field name="vat" />
                <field name="age" />
                <field name="birth_date" optional="show"/>
                <field name="partner_id" />
                <field name="average_score" />
            </list>
        </field>
    </record>

    <record id="student_view_search" model="ir.ui.view">
        <field name="name">student.view.search</field>
        <field name="model">learning.student</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name" />
                <field name="vat" />
                <field name="age" />
                <field name="partner_id" />
                <filter name="adult" string="Adulto" domain="[('age', '&gt;', 18)]"/>
                <filter name="nino" string="NiÃ±o" domain="[('age', '&lt;', 18)]"/>
                <group string="Group By">
                    <filter name="group_by_age" string="Age" context="{'group_by':'age'}"/>
                    
                </group>
            </search>
        </field>
    </record>

    <record id="student_action" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="res_model">learning.student</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="student_view_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
