<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="score_view_form" model="ir.ui.view">
        <field name="name">score.view.form</field>
        <field name="model">learning.score</field>
        <field name="arch" type="xml">
            <form string="Score">
                <sheet>
                    <group>
                        <field name="student_id" />
                        <!-- show only subjects that include the selected student -->
                        <field name="subject_id" domain="[('student_id','in',[student_id])]" />
                        <field name="value" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="score_view_list" model="ir.ui.view">
        <field name="name">score.view.list</field>
        <field name="model">learning.score</field>
        <field name="arch" type="xml">
            <list string="Scores">
                <field name="student_id" required="true"/>
                <field name="subject_id" required="true"/>
                <field name="value" />
            </list>
        </field>
    </record>

    <record id="score_action" model="ir.actions.act_window">
        <field name="name">Scores</field>
        <field name="res_model">learning.score</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
