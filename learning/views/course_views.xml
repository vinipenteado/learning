<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="course_view_form" model="ir.ui.view">
        <field name="name">course.view.form</field>
        <field name="model">learning.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="subject_id" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="course_view_list" model="ir.ui.view">
        <field name="name">course.view.list</field>
        <field name="model">learning.course</field>
        <field name="arch" type="xml">
            <list string="Courses">
                <field name="name" />
                <field name="subject_names" />
            </list>
        </field>
    </record>

    <record id="course_view_search" model="ir.ui.view">
        <field name="name">course.view.search</field>
        <field name="model">learning.course</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name" />
                <field name="subject_id" />
                <group string="Group By">
                    <filter name="group_by_subject" string="Subject" context="{'group_by':'subject_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="course_action" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">learning.course</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="course_view_search"/>
    </record>

</odoo>
